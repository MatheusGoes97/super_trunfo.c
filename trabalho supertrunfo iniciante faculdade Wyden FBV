#include <stdio.h>

int main() {
    // Carta 1 - Pernambuco (Recife)
    char estado1 = 'P';
    char codigo1[] = "P01";
    char cidade1[] = "Recife";
    int populacao1 = 1653461;
    float area1 = 218.5;
    float pib1 = 58.4;
    int pontos_turisticos1 = 35;

    // Carta 2 - Paraíba (João Pessoa)
    char estado2 = 'B';
    char codigo2[] = "B02";
    char cidade2[] = "João Pessoa";
    int populacao2 = 817511;
    float area2 = 211.5;
    float pib2 = 18.7;
    int pontos_turisticos2 = 25;

    // Exibição dos dados da primeira carta (Recife)
    printf("Carta 1 - Pernambuco:\n");
    printf("Estado: %c\n", estado1);
    printf("Código: %s\n", codigo1);
    printf("Nome da Cidade: %s\n", cidade1);
    printf("População: %d habitantes\n", populacao1);
    printf("Área: %.1f km²\n", area1);
    printf("PIB: %.1f bilhões de reais\n", pib1);
    printf("Número de Pontos Turísticos: %d\n\n", pontos_turisticos1);

    // Exibição dos dados da segunda carta (João Pessoa)
    printf("Carta 2 - Paraíba:\n");
    printf("Estado: %c\n", estado2);
    printf("Código: %s\n", codigo2);
    printf("Nome da Cidade: %s\n", cidade2);
    printf("População: %d habitantes\n", populacao2);
    printf("Área: %.1f km²\n", area2);
    printf("PIB: %.1f bilhões de reais\n", pib2);
    printf("Número de Pontos Turísticos: %d\n", pontos_turisticos2);

    return 0;


}
